<Window x:Class="JXC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JXC"
        mc:Ignorable="d"
        Title="MC进销存" Height="800" Width="305">
    <Grid>
        <TreeView Margin="0,0,0,30" BorderThickness="0">
            <TreeViewItem Header="入库管理">
                <TreeViewItem Header="Orange"/>
                <TreeViewItem Header="Banana"/>
                <TreeViewItem Header="Grapefruit"/>
            </TreeViewItem>
            <TreeViewItem Header="出库管理">
                <TreeViewItem Header="Aubergine"/>
                <TreeViewItem Header="Squash"/>
                <TreeViewItem Header="Spinach"/>
            </TreeViewItem>
            <TreeViewItem Header="销售分析">
                <TreeViewItem x:Name="kccx" Header="库存查询" MouseDoubleClick="kccx_MouseDoubleClick"/>
                <TreeViewItem Header="Squash"/>
                <TreeViewItem Header="Spinach"/>
            </TreeViewItem>
        </TreeView>
        <Button x:Name="bt_about" Content="MC进销存" Margin="0" VerticalAlignment="Bottom" Height="30" BorderThickness="0" Click="bt_about_Click"/>
    </Grid>
</Window>
